.container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

.panel {
  width: 100%;
  border: 1rpx solid #00FF41;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: flex-start;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #00FF41;
  padding: 8rpx;
  background: #001900;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.hint {
  font-size: 22rpx;
  color: #9DFF9D;
  margin-bottom: 10rpx;
}

.actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.action-btn {
  font-size: 24rpx;
  border: 1rpx solid #00FF41;
  padding: 6rpx 16rpx;
  background: transparent;
  color: #00FF41;
}

.action-btn:active {
  background: #00FF41;
  color: #000000;
}

button.action-btn {
  line-height: 1.8;
}
