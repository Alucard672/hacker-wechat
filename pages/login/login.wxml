<view class="container">
  <view class="panel">
    <image class="logo" src="/images/logo.png" mode="aspectFit"></image>
    <text class="title">极客笔记</text>
    <text class="subtitle">{{status}}</text>
    <text wx:if="{{phone}}" class="hint">已绑定手机号</text>
    <view class="actions">
      <view class="action-btn" bindtap="retryLogin">重试</view>
      <button class="action-btn" open-type="getPhoneNumber" bindgetphonenumber="bindPhone">绑定手机号</button>
      <button class="action-btn" open-type="getUserInfo" bindgetuserinfo="bindNickname">获取昵称</button>
      <view class="action-btn" bindtap="goChat">进入聊天</view>
    </view>
  </view>
</view>
