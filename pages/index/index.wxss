.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.topbar {
  display: flex;
  align-items: center;
  gap: 10rpx;
  border: 1rpx solid #00FF41;
  padding: 10rpx 14rpx;
  margin-bottom: 16rpx;
}

.logo {
  height: 40rpx;
  width: 40rpx;
}

.topbar-title {
  font-weight: bold;
  font-size: 28rpx;
}

.topbar-sub {
  font-size: 22rpx;
  color: #9DFF9D;
  margin-left: auto;
  text-align: right;
}

 

.chat-window {
  flex: 1;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.message-row {
  margin-bottom: 15rpx;
  word-break: break-all;
  line-height: 1.4;
  font-size: 28rpx;
}

.user { color: #9DFF9D; }
.system { color: #4DD0E1; }

.user.latest {
  color: #C5FF7A;
}

.system.latest {
  color: #00FF41;
  text-shadow: 0 0 5rpx #00FF41;
}

.history {
  opacity: 0.75;
}

.prefix {
  font-weight: bold;
}

.cursor {
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

.content {
  display: block;
}

.msg-image {
  max-width: 300rpx;
  max-height: 300rpx;
  border: 1rpx solid #00FF41;
  margin-top: 10rpx;
}

.file-box {
  background: #002200;
  border: 1rpx dashed #00FF41;
  padding: 10rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
}

.action-bar {
  display: flex;
  gap: 20rpx;
  padding-bottom: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  border: 1rpx solid #00FF41;
  padding: 5rpx 15rpx;
  background: transparent;
  color: #00FF41;
}

.action-btn:active {
  background: #00FF41;
  color: #000000;
}

.input-area {
  display: flex;
  align-items: center;
  border-top: 1rpx solid #004411;
  padding-top: 20rpx;
}

.input-prefix {
  margin-right: 10rpx;
  font-weight: bold;
}

.main-input {
  flex: 1;
  height: 60rpx;
  color: #00FF41;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
